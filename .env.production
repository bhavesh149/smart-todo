# Production Environment Configuration for Smart Todo Backend
# Copy this to .env in production and update with your actual values

# Django Configuration
DEBUG=False
SECRET_KEY=your-production-secret-key-minimum-50-characters-long-replace-this-with-actual-key
ALLOWED_HOSTS=your-domain.com,your-ec2-public-ip,localhost,127.0.0.1

# Neon Database Configuration (Production)
# Update these with your actual Neon database details
DB_NAME=neondb
DB_USER=neondb_owner
DB_PASSWORD=your_actual_neon_password_here
DB_HOST=your-actual-neon-host.neon.tech
DB_PORT=5432

# AI Integration
GROQ_API_KEY=your_actual_groq_api_key_here

# CORS Configuration (Update with your frontend domain)
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com,http://localhost:3000,http://localhost:3005

# Security Settings (HTTPS)
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=DENY

# Static Files Configuration
STATIC_ROOT=/home/ubuntu/smart-todo-backend/staticfiles
USE_S3=False

# Logging Level
LOG_LEVEL=INFO

# Cache Configuration (optional - Redis)
# REDIS_URL=redis://localhost:6379/1

# Email Configuration (optional)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# Monitoring (optional - Sentry)
# SENTRY_DSN=your-sentry-dsn-here
